name: Model Validate and Build
on:
  push:
    branches:
      - main
      - model-cidc
  pull_request:
    branches:
      - main
      - develop

jobs:
  validate-and-build:
    permissions:
        packages: read
        contents: write
    uses: CBIIT/bento-workflows/.github/workflows/model-test-and-deploy.yml@v2.2.2
    with:
      model_files: |
        ins-model.yml ins-model-props.yml
      model_prefix: ins-model
      event_name: ${{ github.event_name }}
    secrets:
      token: ${{ secrets.PAT }}
